<?xml version="1.0"?>
<ruleset name="phg-routing" namespace="AgePartnership">

    <file>./src</file>

    <exclude-pattern>/httpdocs/inclinedpelagian.php</exclude-pattern>
    <exclude-pattern>*\.(js|inc|css)</exclude-pattern>
    <exclude-pattern>*/httpdocs/phg/*</exclude-pattern>
    <exclude-pattern>*/httpdocs/javascript/*</exclude-pattern>
    <exclude-pattern>*/httpdocs/admin/ckfinder/*</exclude-pattern>
    <exclude-pattern>*/vendor/*</exclude-pattern>

    <!-- <arg name="report" value="summary"/> -->
    <arg name="colors"/>
    <arg value="sp"/>

    <rule ref="PEAR">
        <exclude name="PEAR" />
    </rule>
    <rule ref="PSR2">
        <exclude name="Generic.Files.LineLength.TooLong" />
    </rule>

</ruleset>
